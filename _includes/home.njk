---
eleventyImport:
  collections: ["post", "log"]
---
{% extends "base.njk" %}

{% block main %}
    <h2>Blog Posts</h2>
    <ul>
    {%- for post in collections.post -%}
      <li><a href={{post.url}}>{{post.date | formatdate }} - {{ post.data.title }}</a></li>
    {%- endfor -%}
    </ul>

    <h2>Learning Logs</h2>
    <ul>
    {%- for log in collections.log -%}
      <li><a href={{log.url}}>{{log.date | formatdate }} - {{ log.data.title }}</a></li>
    {%- endfor -%}
    </ul>
{% endblock %}

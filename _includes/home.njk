---
eleventyImport:
  collections: ["post", "log"]
---
{% extends "base.njk" %}

{% block main %}
    <h2>Blog Posts</h2>
    <ul>
    {%- for post in collections.post -%}
      <li>{{post.date | formatdate }} - <a href={{post.url}}>{{ post.data.title }}</a></li>
    {%- endfor -%}
    </ul>

    <h2>Learning Logs</h2>
    <ul>
    {%- for log in collections.log -%}
      <li>{{log.date | formatdate }} - <a href={{log.url}}>{{ log.data.title }}</a></li>
    {%- endfor -%}
    </ul>
{% endblock %}
